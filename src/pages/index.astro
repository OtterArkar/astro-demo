---
import Layout from '../layouts/Layout.astro';
import { i18n } from '@store/locale';
import SvelteFoods from '@components/home/Foods.svelte';
import client from '@lib/sanityClient';
const query = `*[_type == "product"][0..20] {
 title,
  tags,
  _id,
  slug,
  "price":defaultProductVariant.price,
  "image":defaultProductVariant.images[0]{
   "asset": asset->url,
  },
  "summary":blurb.${i18n.get()}
}`;
const data = await client.fetch(query).then(items=>items)
---

<Layout title={"Astro + Svelte"}>
  <SvelteFoods data={data} title={"Snacks By Svelte Components" } client:load/> 
    <!-- <AstroFoods data={data} title={"Statically Generated By Astro" }/> -->
</Layout>

